extends layout

block content
  link(rel='stylesheet', href='/stylesheets/style.css')
  h1(class='center underline')= title
  h3(class='redtext') Are you sure you want to DELETE the following contact...???
  hr
  form(action=`/contacts/${contact.id}/delete`, method="post")
    table(style='width:25%; background-color: white;', border='1')
      tr 
        td 
          label(for="firstName") First Name
        td 
          p=contact.firstName
      tr
        td
          label(for="lastName") Last Name
        td
          p=contact.lastName
      tr
        td
          label(for="emailAddress") Email Address
        td
          p=contact.emailAddress
      tr
        td
          label(for="notes") Notes
        td
          p=contact.notes
    br
    br
    table(style='width:20%;')
      tr
        td
          button(type="submit" class="redOnHover") Confirm Delete
        td
          a(href=`/contacts/${contact.id}`) 
            button(type="button") Cancel
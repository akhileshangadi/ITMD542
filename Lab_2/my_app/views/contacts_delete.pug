extends layout

block content
  h1= title
  h3 Are you sure you want to delete the following contact...???
  hr
  form(action=`/contacts/${contact.id}/delete`, method="post")
    table(style='width:20%;', border='1')
      tr 
        td 
          label(for="firstName") First Name
        td 
          p=contact.firstName
      tr
        td
          label(for="lastName") Last Name
        td
          p=contact.lastName
      tr
        td
          label(for="emailAddress") Email Address
        td
          p=contact.emailAddress
      tr
        td
          label(for="notes") Notes
        td
          p=contact.notes
    br
    br
    table(style='width:20%;')
      tr
        td
          button(type="submit") Confirm Delete
        td
          a(href=`/contacts/${contact.id}`) Cancel